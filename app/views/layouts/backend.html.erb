<!DOCTYPE html>
<html>
<head>
  <title>Gtt</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'blueprint/src/reset', 'blueprint/src/forms', 'blueprint/screen', 'blueprint/src/ie', 'blueprint/src/typography', 'main' %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="message">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "notice_#{name}" %>
    <% end %>
</div>


<div id="main">

  <div id="block_1">
    <div class="container">
      <div class="span-9" id="fejlec_hatter">
        &nbsp;
      </div>

      <div class="span-7 prepend-5" id="admin_data">
        <div class="text">
          <b>Adminisztrátor adatai :</b> <%= current_admin.email %><br/>
          <b>Utolsó bejelentkezés : </b> <%= current_admin.last_sign_in_at %><br/>
          <b>IP-cím : </b> <%= current_admin.current_sign_in_ip %>
        </div>
      </div>


      <div class="span-3 last">
        <div id="admin_login">
          <%= image_tag("logout.png") %><%= link_to "Kijelentkezés", destroy_admin_session_path %>
        </div>
      </div>
    </div>
  </div>

  <div id="block_2">

    <div class="container">

       <div class="span-24">
          <h2>Üdv, az admin felületen!</h2>
       </div>

      <div class="span-8" id="backend_left">
        <div class="text">
           <h2>Főmenü</h2>
          <ul>
            <li>Mail support</li>
            <li>Hibabejelentés</li>
            <li>Nyomtatott anyagok</li>
            <li>Kapcsolattartók</li>
            <li>Szoftverek</li>
          </ul>
        </div>
      </div>

      <div class="span-4" id="backend_middle">
        <div class="text">
           <h2>Rendszerek</h2>
        </div>
      </div>

      <div class="span-12 last" id="backend_right">
        <div class="text">
           <h2>Listák</h2>
        </div>
      </div>

    </div>
  </div>

  <div id="footer">
     <div class="container">
       <div class="span-24">
         <div class="footer_text">
           Globomax Kft. | Minden jog fenntartva 2011
         </div>
       </div>
     </div>
  </div>

</div>

<%= yield %>

<script>
  $('#notice_notice').delay(1900).slideUp(900);
  $('#notice_alert').delay(1900).slideUp(900);
</script>


</body>
</html>
