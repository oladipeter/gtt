<!DOCTYPE html>
<html>
<head>
  <title>Gtt</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'blueprint/src/reset', 'blueprint/src/forms', 'blueprint/screen', 'blueprint/src/ie', 'blueprint/src/typography', 'main', 'formtastic', 'formtastic_changes' %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="message">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "notice_#{name}" %>
    <% end %>
</div>


<div id="main">

  <div id="block_1">
    <div class="container">
      <div class="span-9" id="fejlec_hatter">
        &nbsp;
      </div>

      <div class="span-7 prepend-5" id="admin_data">
        <div class="main_text">
          Ügyfél neve : <b><%= current_user.full_name %></b><br/>
          <b>Utolsó bejelentkezés : </b> <%= current_user.last_sign_in_at %><br/>
        </div>
      </div>


      <div class="span-3 last">
        <div id="admin_login">
          <%= image_tag("logout.png") %><%= link_to "Kijelentkezés", destroy_user_session_path %>
        </div>
      </div>
    </div>
  </div>

  <div id="frontend">
      <div id="block_2">

        <div class="container">

          <div class="span-24">

            <!-- LINE 1 -->

            <% unless @user_contact %>

              <div class="span-12">
                <div class="main_text" id="teruleti_kepviselo">
                  <h2>Az Ön területi lépviselője:</h2>
                  <div class="no_contact">
                    <b>Az adminisztrátor még nem rendelt Önhöz kapcsolattartót!</b>
                  </div>
                </div>
              </div>

            <% else %>

              <div class="span-12">
                <div class="main_text" id="teruleti_kepviselo">
                  <h2>Az Ön területi lépviselője:</h2>

                    <% if @user_contact.image_file_name.blank? %>
                       <td><%= image_tag("default_profile_thumb.png") %></td>
                    <% else %>
                       <td><%= image_tag @user_contact.image.url(:medium) %></td>
                    <% end %>

                  <div class="kapcs_nev">
                    <%= @user_contact.name %>
                  </div>
                  <div class="kapcs_vezetekes">
                    Vezetékes telefon : <%= @user_contact.phone %>
                  </div>
                  <div class="kapcs_mobil">
                    Mobil telefon : <%= @user_contact.mobil %>
                  </div>
                  <div class="kapcs_email">
                    E-mail cím : <%= @user_contact.email %>
                  </div>
                </div>
              </div>

            <% end %>

            <div class="span-12 last">
              <div class="main_text">
                <h2>Globomax központ :</h2>
                <%= image_tag("telephely.png") %>
                <div class="telephely_nev">
                  Globomax Elektronikai Kft.
                </div>
                <div class="telephely_cim">
                <b>Cím : </b> 1155 Budapest, Dembinszky utca 1.<br/>
                </div>
                <div class="telephely_usz">
                <b>Ügyfélszolgálat : </b> 06-1-271-0451<br/>
                </div>
                <div class="telephely_fax">
                <b>Fax : </b>06-1-306-53-64
                </div>
              </div>
            </div>

            <!-- Mikrovoks -->

            <div class="span-8" id="mikrovoks">

                <div class="span-8" id="mikrovoks_fejlec">
                  <div class="main_text">MikroVoks Jegyzőkönyvező Rendszer</div>
                </div>
                <div class="demo">
                  <div class="span-8" id="mikrovoks_image">
                  </div>
                  <div class="tooltip">
                     <%= @mikrovoks_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>

            <!-- Mikrokam -->

            <div class="span-8" id="mikrokam">

                <div class="span-8" id="mikrokam_fejlec">
                  <div class="main_text">MikroKam Jegyzőkönyvező Rendszer</div>
                </div>
                <div class="demo">
                  <div class="span-8" id="mikrokam_image">
                  </div>
                  <div class="tooltip">
                     <%= @mikrokam_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>
            
            <!-- seQUEnce -->

            <div class="span-8 last" id="sequence">

                <div class="span-8" id="sequence_fejlec">
                  <div class="main_text">seQUEnce Jegyzőkönyvező Rendszer</div>
                </div>
                <div class="demo">
                  <div class="span-8" id="sequence_image">
                  </div>
                  <div class="tooltip">
                     <%= @sequence_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>

            <!-- LINE 3 -->

            <div class="span-8" id="edtr">

                <div class="span-8" id="edtr_fejlec">
                  <div class="main_text">EDtR Jegyzőkönyvező Rendszer</div>
                </div>
                <div class="demo">
                  <div class="span-8" id="edtr_image">
                  </div>
                  <div class="tooltip">
                     <%= @edtr_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>
            
            <div class="span-8" id="mvmonitor">

                <div class="span-8" id="mvmonitor_fejlec">
                  <div class="main_text">MvMonitor Jegyzőkönyvező Rendszer</div>
                </div>
                <div class="demo">
                  <div class="span-8" id="mvmonitor_image">
                  </div>
                  <div class="tooltip">
                     <%= @mvmonitor_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>
            
            <div class="span-8 last" id="digirat">

                <div class="span-8" id="digirat_fejlec">
                  <div class="main_text">Digirat Jegyzőkönyvező Rendszer</div>
                </div>

                <div class="demo">
                  <div class="span-8" id="digirat_image">
                  </div>
                  <div class="tooltip">
                     <%= @digirat_system.description %>
                  </div>
                </div>

                <div class="span-8">
                    <%= image_tag "termek_tamogatas.jpg" %>
                </div>

            </div>

            <!-- LINE 4 -->

            <div class="span-24">
              <div id="advices">
                <div class="main_text">
                     <% @advices.each do |advice| %>
                        <h2><%= advice.title %></h2>
                        <%= advice.content %>
                        <div class="advice_information">
                        Létrehozva : <%= advice.created_at %>
                        </div>
                     <% end %>
                </div>
              </div>
            </div>

            <div class="span-24">
              <div class="main_text"><%= yield %></div>
            </div>

          </div>

        </div>

        </div>

      </div>

  <div id="footer">
     <div class="container">
       <div class="span-24">
         <div class="footer_main_text">
           Globomax Kft. | Minden jog fenntartva 2011
         </div>
       </div>
     </div>
  </div>

</div>

<script>
  $('#notice_notice').delay(1900).slideUp(900);
  $('#notice_alert').delay(1900).slideUp(900);

  /* TOOLTIP */

  // create custom animation algorithm for jQuery called "bouncy"
  $.easing.bouncy = function (x, t, b, c, d) {
    var s = 1.70158;
    if ((t /= d / 2) < 1) return c / 2 * (t * t * (((s *= (1.525)) + 1) * t - s)) + b;
    return c / 2 * ((t -= 2) * t * (((s *= (1.525)) + 1) * t + s) + 2) + b;
  }

  // create custom tooltip effect for jQuery Tooltip
  $.tools.tooltip.addEffect("bouncy",

    // opening animation
    function(done) {
      this.getTip().animate({top: '+=45'}, 500, 'bouncy', done).show();
    },

    // closing animation
    function(done) {
      this.getTip().animate({top: '-=15'}, 500, 'bouncy', function() {
        $(this).hide();
        done.call();
      });
    }
    );
  $('#mikrovoks_image, #mikrokam_image, #sequence_image, #edtr_image, #mvmonitor_image, #digirat_image ').tooltip({ effect: 'bouncy', opacity: 0.5, delay: 500 });





</script>


</body>
</html>
