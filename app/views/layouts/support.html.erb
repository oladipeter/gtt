<!DOCTYPE html>
<html>
<head>
  <title>Gtt</title>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'blueprint/src/reset', 'blueprint/src/forms', 'blueprint/screen', 'blueprint/src/ie', 'blueprint/src/typography', 'main', 'formtastic', 'formtastic_changes' %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="message">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "notice_#{name}" %>
    <% end %>
</div>


<div id="main">

  <div id="block_1">
    <div class="container">
      <div class="span-9" id="fejlec_hatter">
        &nbsp;
      </div>

      <div class="span-7 prepend-5" id="admin_data">
        <div class="main_text">
          Ügyfél neve : <b><%= current_user.full_name %></b><br/>
          <b>Utolsó bejelentkezés : </b> <%= current_user.last_sign_in_at %><br/>
        </div>
      </div>


      <div class="span-3 last">
        <div id="admin_login">
          <%= image_tag("logout.png") %><%= link_to "Kijelentkezés", destroy_user_session_path %>
        </div>
      </div>
    </div>
  </div>

  <div id="frontend">
      <div id="block_2">
        <div class="container">
          <div class="span-24">
             <div class="span-6" id="support_left">
                <%= render 'shared/support_menu' %>
             </div>
             <div class="span-18 last">
               <div class="main_text">
                <%= yield %>
               </div>
             </div>

          </div>
        </div>
      </div>
  </div>

  <div id="footer">
     <div class="container">
       <div class="span-24">
         <div class="footer_main_text">
           Globomax Kft. | Minden jog fenntartva 2011
         </div>
       </div>
     </div>
  </div>

</div>

<script>
  $('#notice_notice').delay(1900).slideUp(900);
  $('#notice_alert').delay(1900).slideUp(900);

  /* TOOLTIP */

  // create custom animation algorithm for jQuery called "bouncy"
  $.easing.bouncy = function (x, t, b, c, d) {
    var s = 1.70158;
    if ((t /= d / 2) < 1) return c / 2 * (t * t * (((s *= (1.525)) + 1) * t - s)) + b;
    return c / 2 * ((t -= 2) * t * (((s *= (1.525)) + 1) * t + s) + 2) + b;
  }

  // create custom tooltip effect for jQuery Tooltip
  $.tools.tooltip.addEffect("bouncy",

    // opening animation
    function(done) {
      this.getTip().animate({top: '+=45'}, 10, 'bouncy', done).show();
    },

    // closing animation
    function(done) {
      this.getTip().animate({top: '-=15'}, 10, 'bouncy', function() {
        $(this).hide();
        done.call();
      });
    }
    );
  $('#mikrovoks_image, #mikrokam_image, #sequence_image, #edtr_image, #mvmonitor_image, #digirat_image ').tooltip({ effect: 'bouncy', position: "bottom left"});

</script>


</body>
</html>
