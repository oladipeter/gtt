<!DOCTYPE html>
<html>
<head>
  <title>Gtt</title>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "tipTip" %>
  <%= stylesheet_link_tag 'blueprint/src/reset', 'blueprint/src/forms', 'blueprint/screen', 'blueprint/src/ie', 'blueprint/src/typography', 'main', 'formtastic', 'formtastic_changes' %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="message">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "notice_#{name}" %>
    <% end %>
</div>


<div id="main">

  <div id="block_1">
    <div class="container">
      <div class="span-9" id="fejlec_hatter">
        &nbsp;
      </div>

      <div class="span-7 prepend-5" id="admin_data">
        <div class="main_text">
          Ügyfél neve : <b><%= current_user.full_name %></b><br/>
          <b>Utolsó bejelentkezés : </b> <%= current_user.last_sign_in_at %><br/>
        </div>
      </div>


      <div class="span-3 last">
        <div id="admin_login">
          <%= image_tag("logout.png") %><%= link_to "Kijelentkezés", destroy_user_session_path %>
        </div>
      </div>
    </div>
  </div>

  <div id="support">
  <div id="frontend">
      <div id="block_2">
        <div class="container">

          <div class="span-24">
            <div class="span-16">
              <div id="frontend_system_name">
                <h2><%#= @system.full_name %></h2>
              </div>
            </div>

            <div class="span-8 last">
              <div id="frontend_search_field">
                <!-- SEARCH FORM  -->
              </div>
            </div>
          </div>

          <div class="span-24">
             <div class="span-6" id="support_content_left">
                <div class="main_text">
                  <div class="menu">
                    <%#= render("shared/support_menu") %>
                  </div>
                  <div class="faqs">
                     <%= yield :faqs %>
                  </div>
                  <div class="supmessages">
                     <%= yield :supmessages %>
                   </div>
                  <div class="articles">
                     <%= yield :articles %>
                  </div>
               </div>
             </div>
             <div class="span-18 last" id="support_content_right">

                 <!-- <div class="span-6" id="hibabejelentes">
                   <h2>Hibabejelentés</h2>
                 </div> -->

                 <!-- div class="span-6" id="ajanlatkeres" >
                   <h2>Ajánlatkérés</h2>
                 </div> -->

                 <!-- <div class="span-6" id="letoltes">
                   <h2>Letöltések</h2>
                 </div> -->

                 <!-- <div class="span-6 last" id="gyik">
                   <h2>Gy.I.K</h2>
                 </div> -->

                 <!-- <div class="span-6" id="eszkozok">
                   <h2>Eszközök</h2>
                 </div> -->

                 <!-- <div class="span-6 last" id="prospektusok">
                   <h2>Prospektusok</h2>
                 </div> -->

                 <div class="span-18">
                   <div class="system_long_description">
                     <%= yield %>
                   </div>
                 </div>


             </div>

          </div>
        </div>
      </div>
  </div>
  </div> <!-- SUPPORT END -->

  <div id="footer">
     <div class="container">
       <div class="span-24">
         <div class="footer_main_text">
           Globomax Kft. | Minden jog fenntartva 2011
         </div>
       </div>
     </div>
  </div>

</div>

<script>
  $('#notice_notice').delay(1900).slideUp(900);
  $('#notice_alert').delay(1900).slideUp(900);
</script>


</body>
</html>
