<div class="offer">

<%= semantic_form_for @offer, :url => create_offer_path(@offer) do |f| %>



    <%= f.inputs :name => "Online ajánlatkérés :" do %>
          <%= f.input :title, :as => :hidden, :input_html => { :default => 'Online ajánlatkérés' } %>


          <% if (params[:name]) %>
            <%= f.input :user, :label => t(:name), :input_html => { :value => params[:name] } , :hint => "Kérem adja meg a nevét!"  %>
          <% else %>
            <%= f.input :user, :label => t(:name), :hint => "Kérem adja meg a nevét!"  %>
          <% end %>


          <% if (params[:government]) %>
            <%= f.input :government, :label => t(:government), :input_html => { :value => params[:government] }, :hint => "Kérem adja meg a hivatala vagy cége nevét!"  %>
          <% else %>
            <%= f.input :government, :label => t(:government), :hint => "Kérem adja meg a hivatala vagy cége nevét!"  %>
          <% end  %>


          <% if (params[:email]) %>
            <%= f.input :email, :label => t(:email), :input_html => { :value => params[:email] }, :hint => "Kérem adja meg az email címét!"  %>
          <% else %>
            <%= f.input :email, :label => t(:email), :hint => "Kérem adja meg az email címét!"  %>
          <% end %>


          <% if (params[:phone]) %>
            <%= f.input :phone, :label => t(:simple_phone), :input_html => { :value => params[:phone] }, :hint => "Kérem adja meg a telefonszámát!"  %>
          <% else %>
            <%= f.input :phone, :label => t(:simple_phone), :hint => "Kérem adja meg a telefonszámát!"  %>
          <% end %>

          <%= f.input :content, :label => t(:subject), :hint => "Kérem adja meg rövid leírását hogy melyik rendszerről vagy komponenséről érdeklődik" %>

    <% end %>

    <%= f.commit_button t(:ok), :class => "offer_button" %>
    <br/>
<% end %>

</div>