<% content_for :position_1 do %>

  <!-- ARTICLE POS 1 -->

  <% @pos1_articles.each do |article| %>
    <% if article.position == "1" %>

            <div> <!-- START NEW ITEM --------------------------------------------------------------------------->

              <div class="item">
                <%= image_tag article.image.url(:medium) %>
                <h3><%= article.title %></h3>

                <div class="article_date">Létrehozva : <%= article.created_at.strftime("%F") %></div>
                <p>
                  <%= raw truncate("#{article.short_description}", :length => 220, :omission => "...") %>
                </p>

                <% if article.outter_link.blank? %>
                   <div class="read_more"><%= link_to "Bővebben", website_article_path(article) %></div>
                <% else %>
                   <div class="read_more"><%= link_to "Bővebben", "#{article.outter_link}", :target => "_BLANK" %></div>
                <% end %>

              </div>

            </div> <!-- END NEW ITEM ---------------------------------------------------------------------------->

    <% end %>
  <% end %>
<% end %>

  <!-- ARTICLE POS 1 END -->

<h1>Archívum</h1>

<div id="archiv">

  <% if @articles != [] %>
      <% @articles.each do |article| %>
          <h2><%= article.title %></h2><br/>

          <div class="text">
            <%= link_to "#{article.short_description}", website_article_path(article) %>
          </div>
      <% end %>
  <% else %>
    Jelenleg nincs egyetlen cikk sem az archívumban!
  <% end %>

</div>
