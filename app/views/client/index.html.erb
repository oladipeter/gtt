<div id="client">

<%= form_tag search_path, :method => "get" do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Felhasználó keresése!", :name => nil %>
<% end %>
<br/>
<hr/>

<h2>Regisztrált ügyfelek</h2>

  <table id="gradient-style" summary="Ügyfelek">
    <thead>
    <tr>
      <th scope="col">Név</th>
      <th scope="col">Email cím</th>
      <th scope="col">Önkormányzat</th>
      <th scope="col">Adatok</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
      <td colspan="4"><%= link_to "Új ügyfél felvitele", client_new_path %> | A rendszerben összesen <%= @number_of_clients %> ügyfél szerepel</td>
    </tr>
    </tfoot>

    <tbody>
    <% @clients.each do |client| %>
        <tr>
          <% unless client.contact %>
             <td><div class="no_contact_in_list"><%= client.full_name %></div></td>
              <td><div class="no_contact_in_list"><%= client.email %></div></td>
              <td><div class="no_contact_in_list"><%= client.local_government %></div></td>
          <% else %>
            <td><%= client.full_name %></td>
            <td><%= client.email %></td>
            <td><%= client.local_government %></td>
          <% end %>
          <td><%= link_to "Adatok", client_edit_path(client)  %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>


