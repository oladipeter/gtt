<h2><%=t :sign_up%></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :full_name, (t :full_name) %><br />
  <%= f.text_field :full_name %></p>

  <p><%= f.label :nick_name, (t :nick_name) %><br />
  <%= f.text_field :nick_name %></p>

  <p><%= f.label :local_government, (t :local_government) %><br />
  <%= f.text_field :local_government %></p>

  <p><%= f.label :phone_number, (t :phone_number) %><br />
  <%= f.text_field :phone_number %></p>

  <p><%= f.label :mikrovoks, (t :mikrovoks) %><br />
  <%= f.check_box :mikrovoks, :unchecked => true, :value => false %></p>

  <p><%= f.label :mikrokam, (t :mikrokam) %><br />
  <%= f.check_box :mikrokam, :unchecked => true, :value => false %></p>

  <p><%= f.label :sequence, (t :sequence) %><br />
  <%= f.check_box :sequence, :unchecked => true, :value => false %></p>

  <p><%= f.label :edtr, (t :edtr) %><br />
  <%= f.check_box :edtr, :unchecked => true, :value => false %></p>
    
  <p><%= f.label :mvmonitor, (t :mvmonitor) %><br />
  <%= f.check_box :mvmonitor, :unchecked => true, :value => false %></p>

  <p><%= f.label :digirat, (t :digirat) %><br />
  <%= f.check_box :digirat, :unchecked => true, :value => false %></p>

  <p><%= f.label :flat_rate, (t :flat_rate) %><br />
  <%= f.select(:flat_rate, options_for_select([['Igen', 1], ['Nem', 0]])) %>

  <p><%= f.label :email, (t :email) %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password, (t :password) %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, (t :password_confirmation) %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit (t :sign_up)  %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
