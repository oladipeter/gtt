<h2><%=t :sign_in %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <p><%= f.label :email, (t :email) %><br />
  <%= f.email_field :email, :class => "title" %></p>

  <p><%= f.label :password, (t :password) %><br />
  <%= f.password_field :password, :class => "title" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %><%= (t :remember_me) %></p>
  <% end -%>

  <p><%= f.submit (t :sign_in) %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>