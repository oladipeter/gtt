<div id="system">

<%= semantic_form_for @system, :html => { :multipart => true } do |f| %>

    <% if @system.errors.any? %>
        <div id="error_explanation">
          <h3>Összesen <%= @system.errors.count %> hiba :</h3>

          <ul>
            <% @system.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.inputs :name => "Rendszer adatai :" do %>
          <%= f.input :name, :label => t(:name), :hint => "Nem szerkeszthető mező!", :input_html => { :disabled => true } %>
          <%= f.input :full_name, :label => "Teljes név", :hint => "Ez jelenik meg a weboldalon a termékek alatt!" %>
          <%= f.input :description, :label => t(:short_description) %>
          <b><%= "Teljes leírás" %></b><br/><br/>
          <%= f.input :long_description, :label => false, :as => :ckeditor, :input_html => { :width => "98%" }, :hint => "Ez jelenik meg a terméktámogatás főoldalán!" %>
          <%= f.input :url, :label => "Külső URL", :hint => "Ide fog mutatni a bővebben gomb!" %>
          <%= f.input :position, :label => "Pozició", :hint => "A Globomax weboldalon megjelenő sorrend!" %>
    <% end %>

    <%= f.commit_button t(:ok) %>

<% end %>

</div>
