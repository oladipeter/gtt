<div id="administrator">
<h2>Adminisztrátor módosítása</h2>

<fieldset>

  <!-- FORM START -->

  <%= form_for @admin, :url => {:action => "update"} do |f| %>

      <% if @admin.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this advice from being saved:</h2>

            <ul>
              <% @admin.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="field">
        <%= f.label :email %>
        <br/>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password, "Jelszó" %>
        <br/>
        <%= f.password_field :password %>
      </div>
      <br/>
      <div class="actions">
        <%= f.submit t(:modify) %>
      </div>

  <% end %>

</fieldset>

</div>