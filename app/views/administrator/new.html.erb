<div id="administrator">
  <h2>Új adminisztrátor felvitele</h2>

  <fieldset>

    <!-- FORM START -->

    <%= form_for @admin, :url => {:action => "create"}, :html => {:multipart => true} do |f| %>

      <% if @admin.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this advice from being saved:</h2>

          <ul>
            <% @admin.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :email %>
        <br/>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :password, "Jelszó" %>
        <br/>
        <%= f.password_field :password %>
      </div>

      <%= f.file_field :image %>
      <br/>

      <div class="actions">
        <%= f.submit t(:create) %>
      </div>

    <% end %>

  </fieldset>

</div>