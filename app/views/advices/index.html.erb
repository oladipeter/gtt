<div id="advice">
<h2>Hírek listája</h2>

<table>
  <tr>
    <th>Cím</th>
    <th>Rövid leírás</th>
    <th>Tartalom</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @advices.each do |advice| %>
  <tr>
    <td><%= advice.title %></td>
    <td><%= advice.short_description %></td>
    <td><%= advice.content %></td>
    <td><%= link_to 'Show', advice %></td>
    <td><%= link_to 'Edit', edit_advice_path(advice) %></td>
    <td><%= link_to 'Destroy', advice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Új hír felvitele", new_advice_path %>
</div>