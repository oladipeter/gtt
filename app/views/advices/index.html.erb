<div id="advice">
<h2>Közlemények listája</h2>

<table>
  <tr>
    <th>Cím</th>
    <th>Hozzárendelve</th>
    <th>Módosít</th>
    <th><div class="align_right">Töröl</div></th>
  </tr>

<% @advices.each do |advice| %>
  <tr>
    <td><%= advice.title %></td>
    <% if advice.system_id.blank? %>
    <td><%= "Nincs hozzárendelve rendszerhez!" %></td>
    <% else %>
    <td><%= advice.system.name %></td>
    <% end %>

    <td><%= link_to t(:modify), edit_advice_path(advice) %></td>
    <td><div class="align_right"><%= link_to t(:delete), advice, :confirm => 'Biztosan törlöd?', :method => :delete %></div></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "Új hír felvitele", new_advice_path %>
</div>