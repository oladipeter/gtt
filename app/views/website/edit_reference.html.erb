<%= semantic_form_for @reference, :url => update_reference_path(@reference)  do |f| %>
  
  <% if @reference.errors.any? %>
        <div id="error_explanation">
          <h3>Összesen <%= @reference.errors.count %> hiba :</h3>

          <ul>
            <% @reference.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.inputs :name => "Cég referenciái :" do %>
          <%= f.input :title, :label => false %>
          <%= f.input :content, :label => false, :as => :ckeditor, :input_html => { :width => "98%", :height => "500px" }  %>
    <% end %>

    <%= f.commit_button t(:ok) %>

<% end %>
